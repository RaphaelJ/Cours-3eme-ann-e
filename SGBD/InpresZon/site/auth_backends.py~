# -*- coding: UTF-8 -*-

from django.contrib.auth.models import User, check_password

from models import Utilisateur

class PLSQLBackend():
    """
    Utilise les procédures PL/SQL pour autentifier l'utilisateur
    """

    supports_inactive_user = False

    def authenticate(self, username=None, password=None):
        try:
            u = Utilisateur.objects.get(login=username, mot_de_passe=password)
            return construire_user(u)
            else:
                return None
        except Utilisateur.DoesNotExist:
            return None

    def get_user(self, user_id):
        try:
            u = Utilisateur.objects.get(login=user_id)
            return construire_user(u)
        except Utilisateur.DoesNotExist:
            return None

    def _construire_user(u):
        """ Construit un objet User à partir d'un objet Utilisateur """
        return User(
            id=u.login, username=u.login, first_name=u.prenom,
            last_name=u.nom, email=u.email, password=u.password,
            is_staff=u.admin, is_superuser=u.admin,
            date_joined=u.date_inscription, utilisateur=u  
        )